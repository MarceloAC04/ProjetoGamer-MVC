@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gamer</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/equipes.css">
</head>

<main>
    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <div class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Faça o login para acessar</h1>
                    <hr>
                </div>
                <button type="submit">
                    <a asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                </button>
            </div>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Edição de Equipes</h1>
                    <hr>
                </div>

                <input type="hidden" name="IdEquipe" value="@ViewBag.Equipe.IdEquipe">
                <input class="campo-entrada" type="text" name="Nome" value="@ViewBag.Equipe.Nome" required
                    placeholder="Digite o nome da sua equipe:">
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="file" id="foto-file" value="@ViewBag.Equipe.Imagem" name="Imagem">
                </label>

                <button type="submit">Atualizar</button>
            </form>
        }
    </section>
</main>
